<section class="hero <%- additionalClasses %>">
    <div class="position-relative overflow-hidden p-3 p-md-5 text-center bg-light-st">
        <div class="col-md-5 px-lg-5 mx-auto">
            <h1 class="display-4 font-weight-normal"><%- mainText %></h1>
            <% secondaryText.forEach((text) => { %>
                <p class="lead font-weight-normal"><%- text %></p>
            <% }); %>
            <button class="btn btn-outline-secondary" data-toggle="modal" data-target="#contact-modal"><%- ctaButtonText %></button>
        </div>
        <div class="product-device shadow-sm d-none d-md-block"></div>
        <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
    </div>
</section>